<script>

   function checkIsMobile() {
        if (navigator.userAgent.indexOf("Mobile") > 0) {
            return true;
        } else {
            alert('We currently run ONLY on mobile ')
            window.location.href = "https://amberxpay.azurewebsites.net/Home/Login";
        }
    }

    checkIsMobile()

    $(document).ready(function () {
        $("#WalletCreatedButton").click(function () {
            location.reload(true);
        });
    });

    $('.owl-carousel').owlCarousel({
        loop: false,
        margin: 10,
        nav: false,

        autoplay: false,
        autoplayHoverPause: false,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 3
            },
            1000: {
                items: 5
            }
        },


    })

    function AddWallet() {
        var Email = $('#WalletEmail').val();
        var WalletCurrency = $('#SelectedCurrency').val();

        $.ajax({
            type: 'POST',
            url: '/Home/CreateWallet',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({ Email: Email, WalletCurrency: WalletCurrency }),
            traditional: true,
            success: function (data) {

                if (data.creationResponse == "Y") {
                    $('#WalletCreated').modal('show');

                } if (data.creationResponse == "E") {
                    alert("You already have a " + WalletCurrency + " wallet");
                }

            }, error: function (data) {
                alert("Error encountered while trying to Create wallet");

            }
        })

    }

    function GetWallets() {
        var Email = $('#WalletEmail').val();


        $.ajax({
            type: 'POST',
            url: '/Home/GetWallets',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({ Email: Email }),
            traditional: true,
            success: function (data) {

                if (data.wallets.length > 0)
                {
                    
                    $("#WalletSection").show();
                    $("#UserBody").show();
                    

                    for (var i = 0; i < data.wallets.length; i++) {

                        if (data.wallets[i].ngN_Wallet_ID != null) {
                            document.getElementById("NGNId").textContent = "NGN Wallet : " + data.wallets[i].ngN_Wallet_ID;
                            document.getElementById("NairaBalance").textContent = "₦ " + data.wallets[i].ngN_Wallet_Balance;
                            document.getElementById("NairaSideBalance").textContent = "₦ " + data.wallets[i].ngN_Wallet_Balance;
                        }
                        if (data.wallets[i].usD_Wallet_ID != null) {
                            document.getElementById("USDId").textContent = "USD Wallet : " + data.wallets[i].usD_Wallet_ID;
                            document.getElementById("DollarBalance").textContent = "$ " + data.wallets[i].usD_Wallet_Balance;
                        }
                        if (data.wallets[i].caD_Wallet_ID != null) {
                            document.getElementById("CADId").textContent = "CAD Wallet : " + data.wallets[i].caD_Wallet_ID;
                            document.getElementById("CADBalance").textContent = "$ " + data.wallets[i].caD_Wallet_Balance;
                        }
                        if (data.wallets[i].gbP_Wallet_ID != null) {
                            document.getElementById("GBPId").textContent = "GBP Wallet : " + data.wallets[i].gbP_Wallet_ID;
                            document.getElementById("PoundBalance").textContent = "£ " + data.wallets[i].gbP_Wallet_Balance;
                        }
                        if (data.wallets[i].eurO_Wallet_ID != null) {
                            document.getElementById("EUROId").textContent = "EURO Wallet : " + data.wallets[i].eurO_Wallet_ID;
                            document.getElementById("EuroBalance").textContent = "€ " + data.wallets[i].eurO_Wallet_Balance;
                        }

                    }
                } else { $("#AddWallet").show(); }

            }, error: function (data) {
                alert("Error encountered while loading wallet details");

            }
        })

    }

    GetWallets()

 </script>



