                    <h5 class="modal-title">Add Wallet</h5>
                </div>
                <div class="modal-body">
                    <div class="action-sheet-content">
                        @using (Html.BeginForm("CreateWallet", "Home", FormMethod.Post, new { @class = "", role = "form", enctype = "multipart/form-data", }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" style="display:none" id="WalletEmail" name="Email" value="@Model.Email">
                            <div class="form-group basic">
                                <div class="input-wrapper">

                                    <select class="form-control custom-select" id="SelectedCurrency">
                                        <option value="">Select Currency</option>
                                        <option value="NGN">Naira Wallet</option>
                                        <option value="USD">US Dollar Wallet</option>
                                        <option value="CAD">Canadian Dollar Wallet</option>
                                        <option value="GBP">British Pound Wallet</option>
                                        <option value="EURO">Euro Wallet</option>
                                    </select>
